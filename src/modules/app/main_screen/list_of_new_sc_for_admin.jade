ion-view
    ion-nav-title Monitoring SC
    ion-nav-buttons(side="left")
        button.button.icon.ion-navicon(ng-click="toggleSideMenu()")
    ion-nav-buttons(side="right")
        button.button.icon.ion-plus(ng-click="new_sc_clicked()")
    ion-content.padding
        ion-list
            ion-item.item-icon-right(ng-click="show_sc_menu(sc)" ng-repeat="sc in current_user.data.list_of_new_sc | orderBy:'+created_date'")
                div {{sc.sc_number}}
                div {{sc.project_name}}
                div {{to_moment(sc.created_date)}}                
